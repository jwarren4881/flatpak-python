#: kivy 2.1.0

#:set button_font 20
#:set warning [1, 239/255, 0, 1]
#:set danger [1, 0, 0, 1]
#:set success [0, 1, 0, 1]
#:set normal [1, 1, 1, 1]
#:set black [0, 0, 0, 1]
#:set shamrock [46/255, 204/255, 113/255, 1]
#:set main_background [60/255,60/255,60/255,1]
#:set dark_grey [105/255,105/255,105/255,1]
#:set blue [173/255, 216/255, 230/255, 1]

<Timesheet>:
	id:timesheet
	name: 'Timesheet'
	background_color: normal
	canvas.before:
		Color:
			rgba: main_background
		Rectangle:
			pos: self.pos
			size: self.size
	BoxLayout:
		orientation: 'vertical'
		TopBar:
			id:timesheet_top_bar
			size_hint_y: .1
		BoxLayout:
			orientation: 'vertical'
			size_hint: (.8, .8)
			pos_hint: {'center_x': 0.5}
			BoxLayout:
				orientation: 'vertical'
				padding: 15
				#spacing: 15
				size_hint: (.95, .4)
				pos_hint: {'center_x': 0.5}
				Label:
					text: 'Date and Department'
					color: normal
					size_hint_y: None
					height: 45
					text_size: self.size
					font_size: 30
					halign: 'left'
					valign: 'bottom'
				GridLayout:
					cols: 2
					padding: 10
					spacing: 10
					#size_hint: (.95, .4)
					#pos_hint: {'center_x': 0.5}
					canvas:
						Color:
							rgba: dark_grey
						Line:
							rectangle: (self.x, self.y, self.width, self.height)
					Label:
						text: 'Date'
						text_size: self.size
						halign: 'right'
						valign: 'center'
						font_size: 25
					Button:
						background_normal:''
						background_color: normal
						color: black
						text: 'Today'
					Label:
						text: 'Department'
						text_size: self.size
						halign: 'right'
						valign: 'center'
						font_size: 25
					Button:
						background_normal:''
						background_color: normal
						color: black
						text: 'Metal'
			BoxLayout:
				orientation: 'vertical'
				padding: 15
				#spacing: 15
				size_hint: (.95, .4)
				pos_hint: {'center_x': 0.5}
				Label:
					text: 'Time Reporting'
					color: normal
					size_hint_y: None
					height: 45
					text_size: self.size
					font_size: 30
					halign: 'left'
					valign: 'bottom'
				BoxLayout:
					orientation: 'horizontal'
					padding: 25
					spacing: 15
					#size_hint: (.95, .4)
					#pos_hint: {'center_x': 0.5}
					canvas:
						Color:
							rgba: dark_grey
						Line:
							rectangle: (self.x , self.y , self.width , self.height)
					Button:
						text: 'Add-On Jobs'
						background_normal:''
						background_color: normal
						color: black
					Button:
						text: 'Job Hours'
						background_normal:''
						background_color: normal
						color: black
			BoxLayout:
				orientation: 'vertical'
				padding: 15
				#spacing: 15
				size_hint: (.95, .4)
				pos_hint: {'center_x': 0.5}
				Label:
					text: 'Actions'
					color: normal
					size_hint_y: None
					height: 45
					text_size: self.size
					font_size: 30
					halign: 'left'
					valign: 'bottom'
				BoxLayout:
					orientation: 'horizontal'
					padding: 25
					spacing: 15
					#size_hint: (.95, .4)
					#pos_hint: {'center_x': 0.5}
					canvas:
						Color:
							rgba: dark_grey
						Line:
							rectangle: (self.x , self.y , self.width , self.height)
					Button:
						text: 'Print Time Sheet'
						background_normal:''
						background_color: normal
						color: black
					Button:
						text: 'Print and Submit Time Sheet'
						background_normal:''
						background_color: normal
						color: black

