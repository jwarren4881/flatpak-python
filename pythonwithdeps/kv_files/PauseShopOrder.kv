# kivy 2.1.0
#: import Factory kivy.factory.Factory

#:set warning [1, 239/255, 0, 1]
#:set danger [1, 0, 0, 1]
#:set success [0, 1, 0, 1]
#:set normal [1, 1, 1, 1]
#:set teal [0, 202/255, 177/255, 1]
#:set black [0, 0, 0, 1]

<PauseReason@Button>
	background_normal: ''
	background_color: normal
	color: black


<PauseShopOrder@Popup>
	id: pause_shop_oder_popup
	title: 'Pause Shop Order'
	auto_dismiss: False
	size_hint: (.95, .6)
	BoxLayout:
		orientation: 'vertical'
		GridLayout:
			cols: 3
			padding: 7
			spacing: 7
			PauseReason:
				text: 'Misc & Cleanup'
			PauseReason:
				text: 'Getting Instruction'
			PauseReason:
				text: 'Machine Repair'
			PauseReason:
				text: 'Product Repair - Other Error'
			PauseReason:
				text: 'Product Repair - Your Error'
			PauseReason:
				text: 'Time Study/ New Item Release'
			PauseReason:
				text: 'No Work/ No Setups Ready'
			PauseReason:
				text: 'Meeting'
			PauseReason:
				text: 'Waiting for Parts'
			PauseReason:
				text: 'Mentoring'
			PauseReason:
				text: 'Changing Shop Order'
		Button:
			size_hint: (0.5, 0.2)
			text: 'Back'
			background_normal: ''
			color: black
			background_color:danger
			on_release: root.dismiss()
