#: kivy 2.1.0

#:set button_font 20
#:set warning [1, 239/255, 0, 1]
#:set danger [1, 0, 0, 1]
#:set success [0, 1, 0, 1]
#:set normal [1, 1, 1, 1]
#:set black [0, 0, 0, 1]
#:set shamrock [46/255, 204/255, 113/255, 1]
#:set main_background [60/255,60/255,60/255,1]

<AttendanceClockedIn>:
    id: attendance_clocked_in
    name: 'AttendanceClockedIn'
    background_color: normal
    canvas.before:
        Color:
            rgba: main_background
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        TopBar:
            id: top_attendance_clocked_in
            size_hint_y: .15
		BoxLayout:
			orientation: 'horizontal'
			size_hint_y: None
			height: 30
			Label:
				text: 'Switch Department'
				font_size: 18
			Label:
				text: 'Clock Out'
				font_size: 18
		BoxLayout:
			BoxLayout:
				BoxLayout:
					id: attendance_switching_options
					orientation: 'vertical'
					spacing: 5
					size_hint: 1, .5
					pos_hint: {'center_y': 0.7}
					canvas:
						Color:
							rgba: black
						Line:
							width: 2.5
							points: self.width , self.parent.height, self.width, self.parent.y
					Label:
						text: 'You Are currently Clocked Into ' + root.department
						size_hint_y: None
						height: 90
					Button:
						text: 'Switch to another department'
						size_hint: (.9, 1)
						pos_hint: {'center_x': 0.5, 'center_y': 0.5}
						padding: (10,10)
						background_normal: ''
						background_color: normal
						color: black
						on_release:
							app.root.current = 'AttendanceSwitchDepts'
				ClockOutReasons:
					spacing: (5,5)
					padding: [7,7,7,7]