# kivy 2.1.0

#:set button_font 20
#:set warning [1, 239/255, 0, 1]
#:set danger [1, 0, 0, 1]
#:set success [0, 1, 0, 1]
#:set normal [1, 1, 1, 1]
#:set black [0, 0, 0, 1]
#:set shamrock [46/255, 204/255, 113/255, 1]
#:set main_background [60/255,60/255,60/255,1]

<AvailableDayWork>:
	id: available_daywork_screen
	name: 'AvailableDayWorkScreen'
    background_color: normal
    canvas.before:
        Color:
            rgba: main_background
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        TopBar:
            id: top_attendance_available_daywork
            size_hint_y: .15
		GridLayout:
			id: available_daywork_gridlayout
			cols: 3
			spacing: 25,25
			padding: 10,10,10,10
        BoxLayout:
            id: available_daywork_lower_nav_buttons
            orientation: 'horizontal'
            size_hint_y: None
            height: 120
            spacing: 15
            padding: 5
            canvas.before:
                Color:
                    rgba: black
                Rectangle:
                    size: self.size
                    pos: self.pos
            Button:
                text: 'Shop Orders'
                font_size: 28
                background_normal: ''
                color: black
                background_color: normal
                on_release:
                	app.root.current = 'available_shop_orders'
            Button:
                text: 'Time Sheet'
                font_size: 28
                background_normal: ''
                color: black
                background_color: normal
                on_release:
                	app.root.current = 'Timesheet'
			