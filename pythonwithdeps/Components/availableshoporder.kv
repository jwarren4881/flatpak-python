#: kivy 2.1.0

#:set danger [1, 0, 0, 1]
#:set success [0, 1, 0, 1]
#:set normal [1, 1, 1, 1]
#:set blue [0, 0, 1, 1]
#:set black [0,0,0,1]
#:set grey [.65,.65,.65,1]

<ShopOrder>:
	orientation: 'vertical'
	size_hint_y: None
	height: self.minimum_height
	canvas.before:
		Color:
			rgba: grey
		Rectangle:
			pos: self.pos
			size:self.size
	BoxLayout:
		orientation: 'horizontal'
		size_hint_y: None
		height:
		canvas.before:
			Color:
				rgba: grey
			Rectangle:
				pos: self.pos
				size:self.size
		padding: 5
		spacing: 5
		Label:
			id: shop_order_number
			text: 'Shop Order 128745: Part Number 5021TOP'
			color: danger
			font_size: 27
			size_hint_y: None
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			size: self.texture_size
			halign: 'right'
			valign: 'center'
		Button:
			text: 'Start'
			size_hint: None, None
			height: 60
			width: root.width / 5
			pos_hint: {'right': 1, 'center_y': 0.5}
			background_normal: ''
			background_color: success
			color: black
			padding_x: 5
			padding_y: 5
	BoxLayout:
		size_hint_y: None
		height: 20
		Label:
			text: "Shop Order Operations"
			size_hint: None, None
			size: self.texture_size
			color: black
			font_size: 20
			canvas.before:
				Color:
					rgba: grey
				Rectangle:
					pos: self.pos
					size:self.size
	BoxLayout:
		id: shop_operation_detail
		orientation: 'vertical'
		size_hint_y: None
		height: self.minimum_height
		canvas:
			Color:
				rgba: danger
			Line:
				rectangle: (self.x, self.y, self.width, self.height)
		#ShopOperations:
		#ShopOperations:


<ShopOperations>:
	canvas.before:
		Color:
			rgba: normal
		Rectangle:
			pos: self.pos
			size: self.size
	size_hint_y: None
	height: self.minimum_height
	Label:
		id: order_state
		text: 'Running'
		color:success
		size_hint: None, None
		size: self.texture_size
		padding_x: 10
		padding_y: 5
	Label:
		id: order_operation
		text: "999"
		color: black
		size_hint: None, None
		size: self.texture_size
		padding_x: 10
		padding_y: 5
	Label:
		id: order_description
		text: "OPERATION DESCRIPTION SOMETIMES IT MIGHT BE LONG"
		color: black
	Label:
		id: order_required
		text: "50 Required"
		color: black
		size_hint: None, None
		size: self.texture_size
		padding_x: 10
		padding_y: 5
	Label:
		id: order_remaining
		text: "50 Remaining"
		color: black
		size_hint: None, None
		size: self.texture_size
		padding_x: 10
		padding_y: 5
	Label:
		id: order_per_hour
		text: "104 per hour"
		color: black
		size_hint: None, None
		size: self.texture_size
		padding_x: 10
		padding_y: 5