#: kivy 2.1.0
#:set danger [1, 0, 0, 1]
#: set num_pad (.2, 0.25)
#: set big_button (.3, 0.25)

<NumberPadPopup>:
	id:main_number_pad_popup
	quantity: quantity
	title: 'Post Good Quantity'
	title_align: 'center'
	title_size: 20
	auto_dismiss: False
	size_hint: None, None
	size: 400,400
	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			id: main_number_pad
			orientation: 'horizontal'
			size_hint_y: None
			height: self.minimum_height
			spacing: 15
			padding: 5
			Button:
				text: 'Clear'
				size_hint_y: None
				size: self.texture_size
				font_size: 20
				on_release:
					root.clear()
			Button:
				text: 'Close'
				size_hint_y: None
				size: self.texture_size
				font_size: 20
				on_release:
					root.close_numberpad()
		TextInput:
			id: quantity
			size_hint_y: None
			font_size: 30
			height: self.minimum_height
			halign: 'center'
			focus: True
			multiline: False
		StackLayout:
			Button:
				text: '1'
				size_hint: num_pad
				on_release:
					root.button_press(self)
			Button:
				text: '2'
				size_hint: num_pad
				on_release:
					root.button_press(self)
			Button:
				text: '3'
				size_hint: num_pad
				on_release:
					root.button_press(self)
			Button:
				text: 'Delete'
				size_hint: big_button
				on_release:
					root.delete(self)
			Button:
				text: '4'
				size_hint: num_pad
				on_release:
					root.button_press(self)
			Button:
				text: '5'
				size_hint: num_pad
				on_release:
					root.button_press(self)
			Button:
				text: '6'
				size_hint: num_pad
				on_release:
					root.button_press(self)
			Label:
				text: ''
				size_hint: big_button
			Button:
				text: '7'
				size_hint: num_pad
				on_release:
					root.button_press(self)
			Button:
				text: '8'
				size_hint: num_pad
				on_release:
					root.button_press(self)
			Button:
				text: '9'
				size_hint: num_pad
				on_release:
					root.button_press(self)
			Label:
				text: ''
				size_hint: big_button
			Label:
				text: ''
				size_hint: num_pad
			Button:
				text: '0'
				size_hint: num_pad
				on_release:
					root.button_press(self)
			Button:
				text: '-/+'
				size_hint: num_pad
				on_release:
					root.make_negative(self)
			Button:
				text: 'Enter'
				size_hint: big_button
				on_release:
					root.submit_posted_quantity()
