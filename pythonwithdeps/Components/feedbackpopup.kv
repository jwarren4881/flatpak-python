# kivy 2.1.0

#:set button_font 20
#:set warning [1, 239/255, 0, 1]
#:set danger [1, 0, 0, 1]
#:set success [0, 1, 0, 1]
#:set normal [1, 1, 1, 1]
#:set black [0, 0, 0, 1]
#:set shamrock [46/255, 204/255, 113/255, 1]
#:set main_background [60/255,60/255,60/255,1]
#:set odoo [113/255, 75/255, 103/255, 1]

<LoadingSpinner>
	canvas.before:
		PushMatrix
		Rotate:
			angle:self.angle
			axis: (0,0,1)
			origin: self.center
	canvas.after:
		PopMatrix

<FeedbackPopup>
	pop_up_text: _pop_up_text
	pop_up_image: _pop_up_image
	size_hint: 0.5, 0.3
	auto_dismiss: False
	title: 'loading....'
	background: ''
	background_color: odoo
	BoxLayout:
		orientation: 'vertical'
		padding: 15,15,15,15
		Image:
			source: './Resources/Images/Odoo/odoo_logo_inverted.png'
		BoxLayout:
			orientation: 'vertical'
			#size_hint_y: None
			LoadingSpinner:
				id: _pop_up_image
				source: './Resources/Images/Spinner/gear.png'
				size_hint_y: None
				keep_ratio: True
				height: 70
				halign: 'left'
			Label:
				id: _pop_up_text
				font_size: 20
				text: ''
				background_normal: ''
				#size_hint_y: None
				#size: self.texture_size
				#halign: 'center'
