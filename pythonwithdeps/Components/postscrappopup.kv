<PostScrapPopup>:
    id: post_scrap_popup
    title: "Scrap Quantity"
    auto_dismiss: False
    size_hint: (None, None)
    size: (400,400)
    BoxLayout:
        id: main_post_scrap
        orientation: 'vertical'
        BoxLayout:
            id: post_scrap_top_buttons
            orientation: 'horizontal'
            size_hint_y: None
            height: root.height / 10
            pos: (0, root.height)
            Button:
                text: 'Clear'
            Button:
                text: 'Close'
                on_release:
                    root.dismiss()