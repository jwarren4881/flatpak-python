{
    "app-id": "org.testing.kiosk",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "runner.sh",
    "finish-args": [
        "--share=network"
    ],
    "modules": [
        {
            "name": "cpython",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.python.org/ftp/python/3.10.10/Python-3.10.10.tar.xz",
                    "md5": "7bf85df71bbe7f95e5370b983e6ae684"
                }
            ]
        },
        {
            "name": "pip-install",
            "buildsystem": "simple",
            "build-options": {
                "build-args": [
                    "--share=network"
                ]
            },
            "build-commands": [
                "pip3 install cycler",
                "pip3 install distlib",
                "pip3 install docutils",
                "pip3 install et-xmlfile",
                "pip3 install filelock",
                "pip3 install Kivy",
                "pip3 install Kivy-Garden",
                "pip3 install kiwisolver",
                "pip3 install matplotlib",
                "pip3 install numpy",
                "pip3 install openpyxl",
                "pip3 install pandas",
                "pip3 install Pillow",
                "pip3 install platformdirs",
                "pip3 install polars",
                "pip3 install psutil",
                "pip3 install Pygments",
                "pip3 install python-dateutil",
                "pip3 install pytz",
                "pip3 install Shapely",
                "pip3 install tk",
                "pip3 install typing_extensions",
                "pip3 install odoorpc",
                "pip3 install python-vlc"
            ]
        },
        {
            "name": "runner",
            "buildsystem": "simple",
            "build-commands": [
                "install -D runner.sh /app/bin/runner.sh",
                "install -D kiosk.py /app/bin/kiosk.py"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "kiosk.py"
                },
                {
                    "type": "file",
                    "path": "runner.sh"
                }
            ]
        }
    ]
}
